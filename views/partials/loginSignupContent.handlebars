<!-- views/partials/loginSignupContent.handlebars -->

<div id="login-signup-container">
  {{!-- Common content for both login and signup forms --}}
  <h1>Login/Signup Page</h1>

  {{!-- Include the login form --}}
  <div id="login-form">
    <h2>Login</h2>
    {{!-- Include your login form fields, buttons, etc. --}}
    <form action="/login" method="post">
      {{!-- Add your login form fields (e.g., username, password) --}}
      <input type="text" name="username" placeholder="Username" required>
      <input type="password" name="password" placeholder="Password" required>
      <button type="submit">Login</button>
    </form>
  </div>

  {{!-- Include the signup form --}}
  <div id="signup-form">
    <h2>Signup</h2>
    {{!-- Include your signup form fields, buttons, etc. --}}
    <form action="/signup" method="post">
      {{!-- Add your signup form fields (e.g., username, password, email) --}}
      <input type="text" name="username" placeholder="Username" required>
      <input type="password" name="password" placeholder="Password" required>
      <input type="email" name="email" placeholder="Email" required>
      <button type="submit">Signup</button>
    </form>
  </div>
</div>
